<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtName"
        android:layout_width="0dp"
        android:gravity="center|start"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/txtStartCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Github project" />

    <TextView
        android:id="@+id/txtStartCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/txtName"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="50"
        app:drawableLeftCompat="@drawable/ic_star" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="0dp"
        android:gravity="center|start"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtName"
        app:layout_constraintEnd_toStartOf="@id/txtForkCount"
        tools:text="Github Description" />

    <TextView
        android:id="@+id/txtForkCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/txtDescription"
        app:layout_constraintTop_toBottomOf="@id/txtName"
        tools:text="50"
        app:drawableLeftCompat="@drawable/ic_fork" />
</androidx.constraintlayout.widget.ConstraintLayout>